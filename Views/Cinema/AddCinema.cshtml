@model Lab_4.Models.Cinema

@{
    ViewData["Title"] = "AddCinema";
}

<h3>@ViewData["Message"]</h3>

<div class="form-group">
    @using (Html.BeginForm("AddCinema", "Home", FormMethod.Post))
    {
        @Html.Hidden("Duration", Model.Duration)
        <p>
            @Html.LabelFor(m => m.Name, "Наименование")<br />
            @Html.DropDownList("Name", ViewBag.NameCinema as SelectList, new { @class = "form-control" })
        </p>
        <p>
            @Html.LabelFor(m => m.Age, "Возраст")<br />
            @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "form-control" } })
        </p>
        <p>
            <input type="submit" value="Отправить" class="btn btn-primary mb-2" />
        </p>
    }
</div>